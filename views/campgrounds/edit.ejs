<%- include("../partials/header") %> 

<div class="container">
    <!-- Heading -->
    <h1 class="d-flex justify-content-center mt-4">Edit <%=campground.Name%></h1>

<!-- Form starts here -->
    <div class="form-group">
        <!-- Action has to be changed here as we'll make a different request -->
        <!-- To make a put request we have to do the tricky part below -->
        <form action="/index/<%= campground._id %>?_method=PUT" method="POST" >
            <div class="row justify-content-center">
                <div class="col-4 align-self-center mb-2">
                    <!-- Two inputs will be taken -->
                    <input type="text" name="campground[Name]" placeholder="Name" class="form-control mb-1" value="<%=campground.Name %>" >
                    <input type="text" name="campground[Image]" placeholder="Image URL" class="form-control mb-1" value="<%=campground.Image%>">
                    <input type="text" name="campground[Desc]" placeholder="Description" class="form-control" value="<%=campground.Desc%>">

                </div>
            </div>
            
            <!-- The button to redirect the page and submit the form -->
            <div class="row justify-content-center">
                <div class="col-4">
                    <button type="button justify-content-center" class="btn btn-primary btn-block">Submit</button>
                </div>
            </div>

            <!-- Link to go back -->
            <div class="row">
                <div class="col-4">
                </div>
                <div class="col-4">
                    <a href="/index"> Go back </a>
                </div>
            </div>

        </form>
    </div>

    
</div>


<%- include("../partials/footer") %> 
